

<%= form_for(@user) do |f|%>
    <label>Name:</label>
    <%= f.text_field :name %><br><br>

    <label>Email Address:</label>
    <%= f.text_field :email %><br><br>

    <label>Password:</label>
    <%= f.password_field :password %><br><br>

    <%=f.submit%>
<% end %>

<a class="my-edit-button2" href="/users/<%=current_user.id %>/delete">Delete Your Account</a>